#####################################
# 🦖 codesaur's Indoraptor framework
#####################################

# --- Environment & App Settings ---
# Хэрэглэж буй орчны төрөл (development, production)
CODESAUR_APP_ENV=development

# Аппликейшний нэр
CODESAUR_APP_NAME=indoraptor

# Цагийн бүс (жишээ: Asia/Ulaanbaatar)
#CODESAUR_APP_TIME_ZONE=Asia/Ulaanbaatar

#####################################
# 🔐 JSON Web Token (JWT)

# JWT алгоритм (жишээ: HS256, HS512, RS256)
INDO_JWT_ALGORITHM=HS256

# JWT хүчинтэй байх хугацаа (секундээр, 2592000 = 30 хоног)
INDO_JWT_LIFETIME=2592000

# JWT secret key (auto-generated during composer post-install script)
INDO_JWT_SECRET=will-be-auto-generated-during-composer-post-install

# Серверийн цагийн багахан зөрөөг зөвшөөрөх хугацаа (секундээр)
#INDO_JWT_LEEWAY=10

#####################################
# 🗄️ Database Configuration

# Өгөгдлийн сангийн серверийн хаяг
INDO_DB_HOST=localhost

# Өгөгдлийн сангийн нэр
INDO_DB_NAME=indoraptor

# Холбогдох хэрэглэгчийн нэр
INDO_DB_USERNAME=root

# Холбогдох хэрэглэгчийн нууц үг
INDO_DB_PASSWORD=

# Өгөгдлийн сангийн charset
INDO_DB_CHARSET=utf8mb4

# Өгөгдлийн сангийн collation
INDO_DB_COLLATION=utf8mb4_unicode_ci

# Холболтыг байнгын (persistent) байлгах эсэх
INDO_DB_PERSISTENT=false

#####################################
# 📧 Mail / SMTP Configuration

# Brevo (SendInBlue) API түлхүүр
#INDO_MAIL_BREVO_APIKEY=""

# Илгээх и-мэйл хаяг
INDO_MAIL_FROM=noreply@codesaur.domain

# Илгээх и-мэйл дээр харуулах нэр
#INDO_MAIL_FROM_NAME="Indoraptor Notification"

# Хариу авах и-мэйл хаяг
#INDO_MAIL_REPLY_TO=

# Хариу авах нэр
#INDO_MAIL_REPLY_TO_NAME=

#####################################
# 🤖 OpenAI API Configuration

# OpenAI API түлхүүр https://platform.openai.com/api-keys
# moedit editor-ийн AI товчинд ашиглагдана
#INDO_OPENAI_API_KEY=sk-your-api-key-here

#####################################
# 📷 Content image optimization
# Зургийн хамгийн их өргөн (px)
INDO_CONTENT_IMG_MAX_WIDTH=1920
# JPEG/WebP чанар (1-100, 90 нь өнгө хадгалахад сайн)
INDO_CONTENT_IMG_QUALITY=90
