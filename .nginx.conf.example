# ======================================================================
# 1. HTTP (port 80) - HTTPS руу албадан чиглүүлэх
# ======================================================================
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name example.com;

    # → http://example.com → https://example.com (301 redirect)
    return 301 https://example.com$request_uri;
}

# ======================================================================
# 2. WWW-г domain-аас хасах
# ======================================================================
server {
    server_name www.example.com;

    # → https://www.example.com → https://example.com
    return 301 $scheme://example.com$request_uri;
}

# ======================================================================
# 3. HTTPS үндсэн сервер (port 443)
# ======================================================================
server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name example.com;

    # ------------------------------------------------------------------
    # SSL тохиргоо (certificate and private key)
    # ------------------------------------------------------------------
    ssl_certificate /etc/nginx/ssl/example.com.crt;
    ssl_certificate_key /etc/nginx/ssl/example.com.key;

    # ------------------------------------------------------------------
    # Web root & index
    # ------------------------------------------------------------------
    # ⚠️ ЗАСВАРЛАХ ШААРДЛАГАТАЙ: Indoraptor/public_html директорын 
    #    бүтэн замыг энд заана уу.
    #    Жишээ: /var/www/Indoraptor/public_html
    root /path/to/Indoraptor/public_html;
    index index.php;

    # ------------------------------------------------------------------
    # Main router - Indoraptor routes
    # ------------------------------------------------------------------
    location / {
        # Static файл байвал → шууд serve
        # Байхгүй бол → index.php руу дамжуулна
        try_files $uri $uri/ /index.php?$args;
    }

    # robots.txt - алдаатай байх тохиолдолд лог бичихгүй
    location = /robots.txt {
        allow all;
        log_not_found off;
        access_log off;
    }

    # ------------------------------------------------------------------
    # PHP файлыг PHP-FPM руу дамжуулах
    # ------------------------------------------------------------------
    location ~ \.php$ {
        include fastcgi_params;

        # PHP 8.2 FPM socket
        fastcgi_pass unix:/var/run/php/php8.2-fpm.sock;

        fastcgi_index index.php;

        # PHP-FPM-д дамжуулах бодит файл
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;

        # PATH_INFO дэмжих (Laravel, Indoraptor, Symfony гэх мэт)
        fastcgi_split_path_info ^(.+\.php)(/.+)$;

        # Файл байхгүй бол 404
        try_files $uri =404;
    }

    # ------------------------------------------------------------------
    # Static resource caching (CSS/JS/IMG)
    # ------------------------------------------------------------------
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|webp)$ {
        expires max;           # Удаан хугацаагаар кэшлэх
        log_not_found off;     # 404 error log-аас зайлсхийх
    }

    # ------------------------------------------------------------------
    # Нууц файлуудад хандахыг хориглох (.htaccess, .env ...)
    # ------------------------------------------------------------------
    location ~ /\.ht {
        deny all;
    }

    # ------------------------------------------------------------------
    # Logs
    # ------------------------------------------------------------------
    access_log /var/log/nginx/example.access.log;
    error_log /var/log/nginx/example.error.log;
}
